<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Text.CurrTemp" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_current_temp</item>
        <item name = "android:textColor">@color/text_color_dark</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Text.Location" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_location</item>
        <item name = "android:textColor">@color/text_color_light</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Text.Day" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_day_name</item>
        <item name = "android:textColor">@color/text_color_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Error" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_error</item>
        <item name = "android:textColor">@color/text_color_error</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Button.Retry" parent="Widget.AppCompat.Button">
        <item name = "android:textColor">@color/text_color_button</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="android:Widget.Material.Button.Borderless">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/dimen_48dp</item>
        <item name="android:paddingRight">@dimen/dimen_48dp</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:background">@drawable/stroke_button</item>
        <item name="android:minHeight">@dimen/dimen_0dp</item>
        <item name="android:minWidth">@dimen/dimen_0dp</item>

    </style>

</resources>
