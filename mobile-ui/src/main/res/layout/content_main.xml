<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/container_current_weather"
        layout="@layout/content_curr_weather"></include>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/bottom_sheet_top_margin"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_current_weather"
        tools:context="com.gojek.mygojekapp.forecast.ForecastActivity">


        <include layout="@layout/bottom_sheet_forecast_weather"></include>

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>